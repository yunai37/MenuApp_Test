<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewWriteActivity">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="#faf4c0" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imgbtn_review"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_left_large"
            android:backgroundTint="#faf4c0" />

        <TextView
            android:id="@+id/txt_review"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="리뷰를 남겨주세요"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#584B00"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rimg_review"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rname_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="음식점 이름"
                        android:gravity="bottom"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/menu_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="메뉴 이름"
                        android:textColor="@color/black"
                        android:gravity="bottom"
                        android:layout_marginTop="5dp"
                        android:textSize="17sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_review"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="2023.03.15. 수"
                            android:layout_marginTop="5dp"
                            android:gravity="bottom"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_review2"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="평점"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <RatingBar
                    android:id="@+id/review_rating"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="45dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.5"
                    android:max="5"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_review3"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:text="리뷰작성"
                    android:gravity="center_vertical"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_review_write"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="right|center"/>

                    <ImageButton
                        android:id="@+id/btn_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right|bottom"
                        android:layout_marginLeft="10dp"
                        android:background="#ffffff"
                        android:src="@drawable/add_photo_alternate_24px"/>

                    <ImageButton
                        android:id="@+id/btn_delete"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right|bottom"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="13dp"
                        android:background="#ffffff"
                        android:src="@drawable/image_not_supported_24px" />

                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/edit_review"
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:hint="리뷰 내용을 입력해 주세요."
                android:textSize="15sp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/txt_border" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_review4"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="키워드로 작성"
                    android:textColor="@color/black"
                    android:gravity="bottom"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_good"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="최고예요!"
                    android:fontFamily="@font/font"
                    android:textSize="15sp"
                    android:textColor="#747474"
                    android:background="@drawable/btn_review"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btn_soso"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:text="낫 배드"
                    android:fontFamily="@font/font"
                    android:textSize="15sp"
                    android:textColor="#747474"
                    android:background="@drawable/btn_review"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btn_bad"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:text="별로예요..."
                    android:fontFamily="@font/font"
                    android:textSize="15sp"
                    android:textColor="#747474"
                    android:background="@drawable/btn_review"
                    app:backgroundTint="@null"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_fast"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="빨리 나와요"
                    android:fontFamily="@font/font"
                    android:textSize="15sp"
                    android:textColor="#747474"
                    android:background="@drawable/btn_review"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btn_god"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:text="갓성비!"
                    android:fontFamily="@font/font"
                    android:textSize="15sp"
                    android:textColor="#747474"
                    android:background="@drawable/btn_review"
                    app:backgroundTint="@null"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저장"
                    android:fontFamily="@font/font"
                    android:textStyle="bold">
                </Button>

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="취소"
                    android:fontFamily="@font/font"
                    android:textStyle="bold">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>